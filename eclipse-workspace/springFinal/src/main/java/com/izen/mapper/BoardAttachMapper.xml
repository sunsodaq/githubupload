<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.izen.mapper.BoardAttachMapper">
   	<insert id="insert" parameterType="com.izen.vo.AttachFileDTO">
   		 insert into  tbl_attach values( 
   		    #{uuid} ,
   		    #{uploadPath} ,
		    #{fileName},
		    #{image} ,
		    #{bno}
		   )
   	</insert>
   	<select id="findByBno" resultType="com.izen.vo.AttachFileDTO">
   		select * from tbl_attach where bno=#{bno}
   	</select>
   	<delete id="delete">
   		delete from tbl_attach where uuid=#{uuid}
   	</delete>
   	<select id="list" resultType="com.izen.vo.AttachFileDTO">
   		select * from tbl_attach
   	</select>
   	<delete id="deleteAll">
   		delete from tbl_attach where bno=#{bno} 
   	</delete>
  </mapper>